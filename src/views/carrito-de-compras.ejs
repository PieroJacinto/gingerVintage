<!DOCTYPE html>
<html lang="en">
<head>
    <head>
        <%- include('./partials/head') %>
    </head>
</head>
<body>
    
    <!-- HEADER -->
    <header>
        <%- include('./partials/header') %>
    </header>

    
    <main>
        <section class="categ-pad mrg-t-1">
            <h1>Tu Carrito</h1>
            <hr>          
        </section>       
        <section class="categ-pad">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Producto</th>
                        <th scope="col">Precio</th> 
                        <th scope="col">Descuento</th>                                            
                        <th scope="col">Subtotal</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
            <% var total = 0 %>
            <% productoCarro.forEach(producto => { %>
                <% total = total + (Math. round(producto.precio - ((producto.precio * producto.descuento) / 100)) * producto.quantity)%> 
                <tbody>
                    <tr>
                        <th scope="row"><%= producto.titulo %></th>
                        <td>$<%= parseInt(Math. round(producto.precio - ((producto.precio * producto.descuento) / 100)))%></td>                    
                        <td> <%= producto.descuento %>%</td>
                        <td>$<%= parseInt(Math. round(producto.precio - ((producto.precio * producto.descuento) / 100))) * producto.quantity %></td>
                        <td> 
                        <form action="/carrito/eliminar" method="post" class="delete" id="eliminarCarrito">
                            <input type="hidden" name="id" value="<%= producto.id %>" />                            
                            <button type="submit" class="boton-eliminar-carrito">                                
                                <i class="fa-solid fa-trash-can"></i>
                            </button>
                        </form>
                    </td>
                    </tr>                     
                </tbody>
                <% }) %>
            </table>              
            <div class="total">
                Total= $<%= total %>
            </div>
            <div class="text-center mrg-t-4">
                <a href="/">
                    <button class="boton-filtros" type="submit"> Seguir Comprando </button>
                </a>
            </div>
        </section>
    </main>

    <!-- FOOTER -->
    <footer>
        <%- include('./partials/footer') %>
    </footer>    
    <script 
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" 
        crossorigin="anonymous">
    </script>
</body>
</html>